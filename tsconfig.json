{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2017",
    "module": "esnext",
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "types": [
      "vite/client",
      "@histoire/plugin-vue/components",
      "element-plus/global",
      "@vueuse/core"
    ],
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"]
    }
  },
  "include": ["src/**/*"]
}
